<% layout('layouts/boilerPlate') %>
  <%- include('../partials/navbar') %>
  <%- include('../partials/flash') %>
    <!-- layout mai boilerplate dediya -->
    <div style="display: flex; flex-wrap: wrap; justify-content: space-evenly;">
      <%for(let item of allproducts){%>
        <div class="card mx-auto mt-3 shadow" style="width: 18rem;">
          <img src="<%=item.img%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h2 class="card-title">
              <%=item.name%>
            </h2>
            <h5 class="card-title">
              <%=item.price%>
            </h5>
            <p class="card-text">
              <%=item.desc%>
            </p>
            <a href="/products/<%=item._id%>" class="btn btn-info">view product</a>
            <% if(currentUser && currentUser.role==='seller'){ %>
              <form action="/products/<%=item._id%>?_method=DELETE" method="POST" class="d-inline-block">
                <button class="btn btn-danger">Delete</button>
              </form>

            <%}%>
          </div>
        </div>

        <%}%>

    </div>